@model ChangeRolesViewModel

<h1>Change roles for User @Model.UserName</h1>
<form asp-action="ChangeUserRoles" method="post">
	<input type="hidden" value="@Model.UserId"/>
	@foreach(var role in Model.AllRoles)	
	{
		<input type="checkbox" name="roles"
		@(Model.UserRoles.Contains(role.Name) ? "checked" : "") value="@role.Name"/>@role.Name <br />
	}
	<input type="submit" value="Save" class="btn btn-primary"/>

</form>/>
<hr />
<a asp-action="UserList" class="btn btn-secondary">Back</a>