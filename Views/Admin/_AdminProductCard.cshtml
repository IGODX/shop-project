@using MyShopPet.Data;
@model Product

<div class="col col-xl-3 col-lg-4 col-md-6 col-12 mb-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text text-truncate">@Model!.Category!.Title</p>
            <p class="card-text">Price: @Model.Price</p>
        </div>
        <div class="btn-group btn-group-sm mb-2">
            <a asp-controller="Product" asp-action="Details"
               asp-route-id="@Model.Id"
               class="btn btn-outline-success">Details</a>
            <a asp-controller="Product" asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-outline-warning">Edit</a>
            <a asp-controller="Product" asp-action="Delete"
               asp-route-id="@Model.Id"
               class="btn btn-outline-danger">Delete</a>
        </div>
        <img src="@Model.Photos?.FirstOrDefault()?.PhotoUrl" class="card-img-bottom" alt="@Model!.Photos?.FirstOrDefault()?.Filename">
    </div>
</div>
