@model AdminIndexViewModel
<div class="btn-group-sm">
<a asp-action="CreateProduct" class="btn-sm btn-secondary">Create new product</a>
<a asp-action="CreateCategory" class="btn-sm btn-secondary">Create new category</a>
</div>
<a></a>
<div class="row">
    @foreach (var product in Model.Products!)
    {
        <div class="col col-xl-3 col-lg-4 col-md-6 col-12 mb-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text text-truncate">@product!.Category!.Title</p>
                    <p class="card-text">Price: @product.Price</p>
                </div>
                <div class="btn-group btn-group-sm mb-2">
                    <a asp-action="Details"
                   asp-route-id="@product.Id"
                   class="btn btn-outline-success">Details</a>
                    <a asp-action="EditProduct"
                   asp-route-id="@product.Id"
                   class="btn btn-outline-warning">Edit</a>
                    <a asp-action="DeleteProduct"
                   asp-route-id="@product.Id"
                   class="btn btn-outline-danger">Delete</a>
                </div>
                <img src="@product.Photos?.FirstOrDefault()?.PhotoUrl" class="card-img-bottom" alt="@product!.Photos?.FirstOrDefault()?.Filename">
            </div>
        </div>
    }
</div>
